@inject IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - JKLHealthCare11810937</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"
        nonce="@HttpContextAccessor.HttpContext.Items["CSPNonce"]" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"
        nonce="@HttpContextAccessor.HttpContext.Items["CSPNonce"]" />
    <link rel="stylesheet" href="~/JKLHealthCare11810937.styles.css" asp-append-version="true"
        nonce="@HttpContextAccessor.HttpContext.Items["CSPNonce"]" />
    <link rel="stylesheet" href="~/css/toastr.css" nonce="@HttpContextAccessor.HttpContext.Items["CSPNonce"]" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">JKLHealthCare11810937</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home"
                                asp-action="Privacy">Privacy</a>
                        </li>

                        @if (HttpContextAccessor.HttpContext?.Session.GetInt32("UserId") != null)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Account"
                                    asp-action="Logout">Logout</a>
                            </li>
                            @if (HttpContextAccessor.HttpContext?.Session.GetString("UserRole") == "caregiver")
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Appointments"
                                        asp-action="Index">Appointments</a>
                                </li>
                            }
                            @if (HttpContextAccessor.HttpContext?.Session.GetString("UserRole") == "administrator")
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Patients"
                                        asp-action="Index">Patients</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Caregivers"
                                        asp-action="Index">Caregivers</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Assignments"
                                        asp-action="Index">Assignments</a>
                                </li>
                            }
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Account"
                                    asp-action="Login">Login</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()

            <script src="~/lib/jquery/dist/jquery.min.js"></script>
            <script src="~/lib/signalr/signalr.min.js"></script>
            <script src="~/lib/toastr/toastr.min.js"></script>
            <script src="~/js/signalr-notification.js"></script>
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - JKLHealthCare11810937 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
