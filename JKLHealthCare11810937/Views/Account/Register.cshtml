@model JKLHealthCare11810937.Models.DTOs.RegisterDTO

<h2>Register</h2>

<form method="post" asp-action="Register">
    <div class="form-group">
        <label asp-for="Username">Username:</label> Â  
        <input asp-for="Username" class="form-control" />
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PasswordHash">Password:</label> <input asp-for="PasswordHash" type="password" class="form-control" />
